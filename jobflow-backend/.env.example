# Application Configuration
NODE_ENV=development
PORT=3000

# MongoDB Database
# Docker: mongodb://jobflow_admin:jobflow_dev_password@localhost:27017/jobflow?authSource=admin
# Local: mongodb://localhost:27017/jobflow
MONGODB_URI=mongodb://jobflow_admin:jobflow_dev_password@localhost:27017/jobflow?authSource=admin

# JWT Authentication
# IMPORTANT: Change these in production!
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
# Frontend URL (adjust if frontend runs on different port)
CORS_ORIGIN=http://localhost:3001

# Rate Limiting (requests per TTL window)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
